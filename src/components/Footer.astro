---
const today = new Date();
import { Icon } from "astro-icon/components";

import LanguageSwitcher from "./LanguageSwitcher.astro";

const { alternateHref } = Astro.props;
---

<footer
  class="md:flex md:justify-between md:items-center md:align-center font-overpass-mono w-full md:h-full mt-12"
>
  <div class="text-[12px] text-center items-center flex justify-center">
    &copy; {today.getFullYear()} name. All rights reserved.
  </div>

  <div class="flex justify-center items-center gap-3 m-2 sm:m-0">
    <div class="flex items-center justify-center my-4">
      <LanguageSwitcher alternateHref={alternateHref} />
    </div>

    <a href="https://www.instagram.com/travel.blog/" target="_blank">
      <span class="sr-only">Go to travel Instragram Profile</span>
      <Icon name="mdi:instagram" class="h-[20px] w-[20px]" />
    </a>
  </div>

  <slot />
</footer>
